{% extends "layout/masterLayout.njk" %}
{% block content %}
    <div class="container-fluid px-4">
        <h1 class="mt-4">Halaman Barang</h1>
        <div class="row">
            <div class="col-12">
                <div class="card mb-4">
                    <div class="card-header">
                        <div class="d-flex flex-column flex-sm-row justify-content-between align-items-start align-items-sm-center gap-2">
                            <span class="mb-2 mb-sm-0">Daftar Barang</span>
                            <div class="d-flex flex-wrap gap-2">
                                <button class="btn btn-primary btn-sm" id="btnTambah" data-bs-toggle="modal" data-bs-target="#tambahModal" href="/inventory/add" >
                                    <i class="fas fa-plus me-1"></i>
                                    <span class="d-none d-sm-inline">Tambah Barang</span>
                                    <span class="d-inline d-sm-none">Tambah</span>
                                </button>
                                <button class="btn btn-info btn-sm text-white" id="btnDownloadData" >
                                    <i class="fas fa-file-excel me-1"></i>
                                    <span class="d-none d-sm-inline">Download Data</span>
                                    <span class="d-inline d-sm-none">Data</span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <table id="datatablesSimple" class="table table-striped" style="width: 100%" >
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>ID</th>
                                    <th>Nama</th>
                                    <th>Deskripsi</th>
                                    <th>Tanggal Pembeliaan</th>
                                    <th>Harga Beli</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for inv in inventories %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td>{{ inv.id }}</td>
                                        <td>{{ inv.nama }}</td>
                                        <td>{{ inv.deskripsi }}</td>
                                        <td>{{ inv.tanggal_pembelian }}</td>
                                        <td>{{ inv.harga_pembelian }}</td>
                                        <td>
                                            <a href="/inventory/edit/{{ inv.id }}" class="btn btn-sm btn-warning" >Edit</a >
                                            <form action="/inventory/delete/{{ inv.id }}" method="post" style="display: inline" >
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Yakin ingin menghapus {{ inv.nama }}?')" > Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document
            .getElementById("btnDownloadData")
            .addEventListener("click", () => {
                window.location.href = "/inventory/download"
                Toastify({
                    text: "Download berhasil! Silakan cek folder download Anda.", duration: 5000, close: true, gravity: "top", // `top` or `bottom`
                    position: "right", // `left`, `center` or `right`
                    stopOnFocus: true, // Prevents dismissing of toast on hover
                    style: {
                        background: "linear-gradient(to right, #00b09b, #96c93d)",
                        marginTop: "50px"
                    },
                    onClick: function () {}, // Callback after click
                }).showToast()
            })
        document
            .getElementById("btnTambah")
            .addEventListener("click", () => {
                window.location.href = "/inventory/add"
            })
        document
            .querySelectorAll('.btn-danger')
            .forEach(button => {
                button.addEventListener('click', function (e) {
                    if (!confirm('Yakin ingin menghapus ' + this.closest('tr').querySelector('td:nth-child(3)').textContent + '?')) {
                        e.preventDefault(); // Batalkan submit jika pengguna memilih "Cancel"
                    }
                });
            });
    </script>

{% endblock %}
{% block script %}{% endblock %}